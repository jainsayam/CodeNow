<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
  <!-- css for login and signup -->
  <link rel="stylesheet" type="text/css" href="login.css">
  <title>Contests | CodeNow</title>
  <style type="text/css">
    /*css for styling the home page front lines (temporary)*/
    .train {
      text-shadow: -3px 1px 0 #000, 1px 1px 0 #000, 1px -3px 0 #000, -3px -3px 0 #000;
    }

    section {
      flex: 1 1 50%;
      padding: 2rem 33rem;
    }

    h2 {
      margin-top: 0;
      margin-bottom: 1.5rem;
    }

    * {
      box-sizing: border-box;
    }


    @media (min-width: 481px) and (max-width: 768px) {
      section {
        flex: 1 1 50%;
        padding: 2rem 0rem;

      }

    }

    @media (min-width: 769px) and (max-width: 1024px) {
      section {
        flex: 1 1 50%;
        padding: 2rem 10rem;

      }

    }

    @media (min-width: 1025px) and (max-width: 1200px) {
      section {
        flex: 1 1 50%;
        padding: 2rem 20rem;

      }

    }

    @media (min-width: 1201px) and (max-width: 1500px) {
      section {
        flex: 1 1 50%;
        padding: 2rem 27rem;

      }

    }

    .cta {
      position: relative;
      margin: auto;
      padding: 12px 18px;
      transition: all 0.2s ease;
      border: none;
      background: none;
    }

    .cta:before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      display: block;
      border-radius: 50px;
      background: #b1dae7;
      width: 45px;
      height: 45px;
      transition: all 0.3s ease;
    }

    .cta span {
      position: relative;
      font-family: "Ubuntu", sans-serif;
      font-size: 18px;
      font-weight: 700;
      letter-spacing: 0.05em;
      color: #234567;
    }

    .cta svg {
      position: relative;
      top: 0;
      margin-left: 10px;
      fill: none;
      stroke-linecap: round;
      stroke-linejoin: round;
      stroke: #234567;
      stroke-width: 2;
      transform: translateX(-5px);
      transition: all 0.3s ease;
    }

    .cta:hover:before {
      width: 100%;
      background: #b1dae7;
    }

    .cta:hover svg {
      transform: translateX(0);
    }

    .cta:active {
      transform: scale(0.95);
    }
  </style>

</head>

<body>
  <!-- navbar -->
  <nav class="navbar navbar-expand-lg navbar sticky-top navbar navbar-dark bg-dark ">
    <div class="container-fluid">
      <a class="navbar-brand" href="/home">CodeNow</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
        data-bs-target="       #navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">

        <ul class="navbar-nav me-auto ">


          <li class="nav-item">
            <a class="nav-link" href="/about">About Us</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contactus">Contact Us</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/contests">Contests</a>
          </li>
        </ul>
        <div class="mx-2">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link " aria-current="page" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </nav>
  <!-- end of navbar -->
  <!-- real code  -->
  <div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75"
      aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
  </div>



  <!-- do participate -->
  <section>
    <button class="cta">
      <span>Contests Available</span>
      <svg width="15px" height="20px" viewBox="0 0 13 10">
        <path d="M1,5 L11,5"></path>
        <polyline points="8 1 12 5 8 9"></polyline>
      </svg>
    </button>
  </section>

  <!-- 3 -->
  <div class="list-group">
    {{#each contestnames}}
    <a href="/contests/{{this.contestName}}" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
      <img src="http://codeskulptor-demos.commondatastorage.googleapis.com/pang/FDqGDmc.png" alt="twbs" width="32"
        height="32" class="rounded-circle flex-shrink-0">
      <div class="d-flex gap-2 w-100 justify-content-between">
        <div>
          <h6 class="mb-0">{{this.contestName}}</h6>
          <p class="mb-0 opacity-75">contest will be on <code>{{this.contestStartDate}}</code> at
            <code>{{this.startingTime}}</code> end on <code>{{this.contestEndDate}}</code> at <code>{{this.endingTime}}</code>. Press the link to go there.</p>
        </div>
        <small class="opacity-50 text-nowrap">1d</small>
      </div>
    </a>
    {{/each}}
  </div>






  <!-- 4 -->


  <!-- end of footer -->
  <!-- Optional JavaScript; choose one of the two! -->
  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
    crossorigin="anonymous"></script>


</body>

</html>