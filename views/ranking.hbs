  <!-- part1 -->
  <section id="container">
    <div class="typewriter-effect">
      <div class="text" id="typewriter-text"></div>
    </div>

    <div class="set_picture">
      <!-- <div class="typewriter-effect">
                      <div class="text" id="typewriter-text"></div>
                    </div>
 -->
      <figure class="hover-img">
        <img src="https://source.unsplash.com/676x296/?black background" />
        <figcaption>
          <h3>Welcome User</h3>
          <br>
          <h5>Here is your contest problem section</h5>
        </figcaption>
      </figure>
    </div>

    <hr>
    <div class="setter_problem">


      <table class="table">
        <thead>
          <tr class="table-dark">

            <th scope="col">Username</th>
